layout my_dialog
{
	view dva_dialog(name: '$$$/Premiere/DLG/ProjectManagerDialog/kResDLGProjectManagerDialogTitle=Project Manager', identifier:'ProjectManagerDialog')
	{
		row(child_horizontal: align_fill, horizontal: align_fill, spacing: 15)
		{
			column(child_horizontal: align_fill, horizontal: align_fill)
			{
				row(child_vertical: align_top, vertical: align_top, child_horizontal: align_fill, horizontal: align_fill)
				{
					dva_static_text(identifier:'sourceText', name:'$$$/Premiere/DLG/ProjectManagerDialog/kResSource=Source:', horizontal: align_left);
					dva_listbox(name:'$$$/Premiere/DLG/ProjectManagerDialog/kResDLGSequenceList=SequenceList', identifier:'sequenceList', direction:'vertical', useCheckboxes:'true', minWidth:280, minHeight:80, horizontal:align_fill);
				}
				dva_groupbox(identifier:'resultingProjectGroupBox', name:'$$$/Premiere/DLG/ProjectManagerDialog/kResDLGResultingProject=Resulting Project', headerType:'static_text', topFrame:6)
				{
					dva_radio_button_group(identifier: 'radioGroup', showBorder: 'true', horizontal: align_fill)
					{
			
						dva_radio_button(identifier:'createNewTrimmedProjectRadioButton', name:'$$$/Premiere/DLG/ProjectManagerDialog/kResCreateNewTrimmedProject=Create New Trimmed Project', value: 'true');
						dva_radio_button(identifier:'collectFilesAndCopyToNewLocationRadioButton', name:'$$$/Premiere/DLG/ProjectManagerDialog/kResCollectFilesAndCopyToNewLocation=Collect Files and Copy to New Location', value: 'false');
					}
					dva_checkbox(identifier:'excludeUnusedClips', name:'$$$/Premiere/DLG/ProjectManagerDialog/kResExcludeUnusedClipsString=Exclude Unused Clips', value:'true');
					dva_checkbox(identifier:'makeOffline', name:'$$$/Premiere/DLG/ProjectManagerDialog/kResMakeOfflineString=Make Offline');
					dva_groupbox(identifier:'optionsGroupBox', name:'$$$/Premiere/DLG/ProjectManagerDialog/kResDLGOptions=Options', headerType:'static_text', horizontal: align_fill, spacing: 6, topFrame:3)
					{
						row()
						{
							column()
							{
								row(spacing:3)
								{
									dva_checkbox(identifier:'includeHandles', name:'$$$/Premiere/DLG/ProjectManagerDialog/kResInCludeHandlesString=Include Handles:', value:'true');
									dva_hot_text_number(identifier:'framesNumber',  value:1, minValue:0, maxValue:100, decimalPlaces:0, increment:1, postLabel:'$$$/Premiere/DLG/ProjectManagerDialog/kResFramesStaticString=Frames', overwritePostLabel:'false');
								}
								dva_checkbox(identifier:'includePreviewFiles', name:'$$$/Premiere/DLG/ProjectManagerDialog/kResIncludePreviewFilesString=Include Preview Files');
								dva_checkbox(identifier:'includeAudioConformFiles', name:'$$$/Premiere/DLG/ProjectManagerDialog/kResIncludeAudioConformFilesString=Include Audio Conform Files');
								dva_checkbox(identifier:'renameMediaFilesToMatchClipNames', name:'$$$/Premiere/DLG/ProjectManagerDialog/kResRenameMediaFilesToMatchClipNamesString=Rename Media Files to Match Clip Names');				
							}
						}
					}
				}
				dva_groupbox(identifier:'projectDestinationGropBox', name:'$$$/Premiere/DLG/ProjectManagerDialog/kResDLGProjectDestination=Project Destination', headerType:'static_text')
				{
					dva_groupbox(identifier:'pathGroupBox', name:'$$$/Premiere/DLG/ProjectManagerDialog/kResDLGPath=Path', headerType:'static_text', horizontal: align_fill)
					{
						row(horizontal: align_fill)
						{
							dva_static_text(identifier:'pathStaticText', name:'$$$/Premiere/DLG/ProjectManagerDialog/kResPathString=(Some file path)', horizontal: align_fill);
							dva_button(identifier:'browseButton', name:'$$$/premiere/DLG/ProjectmanagerDialog/kBrowseButtonString=Browse...', horizontal: align_right, minWidth:80);
						}
					}
					dva_groupbox(identifier:'diskSpaceGroupBox', name:'$$$/Premiere/DLG/ProjectManagerDialog/kResDLGDiskSpace=Disk Space', headerType:'static_text', horizontal: align_fill)
					{
						row()
						{
							column()
							{
								dva_static_text(identifier:'diskSpaceAvailableStaticText', minWidth:70, name:'$$$/Premiere/DLG/ProjectManagerDialog/kResDiskSpaceAvailableString=Unknown', label:'$$$/Premiere/DLG/ProjectManagerDialog/kResDLGDiskSpaceAvailable=Disk Space Available:');
								dva_static_text(identifier:'originalProjectSizeStaticText', minWidth:70, name:'$$$/Premiere/DLG/ProjectManagerDialog/kResAddString=Unknown', label:'$$$/Premiere/DLG/ProjectManagerDialog/kResDLGOriginalProjectSize=Original Project Size:');
								dva_static_text(identifier:'resultingProjectSizeStaticText', minWidth:70, name:'$$$/Premiere/DLG/ProjectManagerDialog/kResResultingProjectSizeString=Unknown', label:'$$$/Premiere/DLG/ProjectManagerDialog/kResDLGProjectStatus=Resulting Project Size (est.):');
							}
							column()
							{
							}
							column()
							{
							}
							column(child_vertial: align_bottom, vertical: align_bottom)
							{
								dva_button(identifier:'calculateButton', name:'$$$/premiere/DLG/ProjectmanagerDialog/kCalculateButtonString=Calculate', horizontal: align_right, minWidth:80);
							}
						}
					}
				}
			}
			column (guide_mask:[@guide_baseline])
			{
				dva_ok_cancel_column(minWidth:80, minHeight:20);
			}
		}
	}
} 
