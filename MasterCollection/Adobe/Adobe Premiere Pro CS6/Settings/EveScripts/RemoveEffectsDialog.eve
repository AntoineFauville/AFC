layout my_dialog
{
	view dva_dialog(name: '$$$/Premiere/DLG/RemoveEffectsDialog/kResDLGRemoveEffectsDialogTitle=Remove Effects', identifier:'RemoveEffectsDialog')
	{
		column(child_horizontal: align_fill, horizontal: align_fill)
		{
			row()
			{
				dva_groupbox(name:'$$$/Premiere/DLG/RemoveEffectsDialog/kResDLGRemoveEffectsDialogIntrinsicGroup=Intrinsic Effects', identifier:'intrinsicGroup', horizontal: align_fill, minWidth:80)
				{
					dva_checkbox(identifier:'deleteMotionCheckbox', name:'$$$/Premiere/DLG/RemoveEffectsDialog/kResDLGResetMotionCheckbox=Motion', minHeight:12);
					dva_checkbox(identifier:'deleteOpacityCheckbox', name:'$$$/Premiere/DLG/RemoveEffectsDialog/kResDLGResetOpacityCheckbox=Opacity', minHeight:12);
					dva_checkbox(identifier:'deleteAudioVolumeCheckbox', name:'$$$/Premiere/DLG/RemoveEffectsDialog/kResDLGResetVolumeCheckbox=Volume', minHeight:12);
					dva_static_text(identifier: 'intrinsicsDescriptionText', name: '$$$/Premiere/DLG/RemoveEffectsDialog/IntrinsicsDescription=Resets parameters and removes keyframes', minHeight:12);
				}
			}
			row()
			{
				dva_checkbox(identifier:'deleteVideoFiltersCheckbox', name:'$$$/Premiere/DLG/RemoveEffectsDialog/kResDLGRemoveVideoEffectsCheckbox=Video Effects', minHeight:12, leftSpace:15);
			}
			row()
			{
				dva_checkbox(identifier:'deleteAudioFiltersCheckbox', name:'$$$/Premiere/DLG/RemoveEffectsDialog/kResDLGRemoveAudioEffectsCheckbox=Audio Effects', minHeight:12, leftSpace:15);
			}	

			row(child_horizontal: align_fill, horizontal: align_fill)
			{
				dva_ok_cancel_row(minWidth:80, minHeight:20);				
			}
		}
	}
} 
