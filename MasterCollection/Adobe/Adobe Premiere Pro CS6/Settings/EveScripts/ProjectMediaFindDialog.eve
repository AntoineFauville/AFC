layout ProjectMediaFindDialog
{
	view dva_dialog(name: '$$$/Premiere/DLG/ProjectMediaFindDialog/kResDLGProjectMediaFindDialogTitle=Find', identifier:'ProjectMediaFindDialog')
	{
		row(child_horizontal: align_fill, horizontal: align_fill, spacing:15)
		{
			column(child_horizontal: align_fill, horizontal: align_fill)
			{
				dva_groupbox(identifier:'findGroupBox', name:'$$$/Premiere/DLG/ProjectMediaFindDialog/kResDLGProjectMediaFindDialogGroupBoxName=Find', headerType:'static_text')
				{
					row()
					{
						column()
						{
							dva_static_text(name:'$$$/Premiere/DLG/ProjectMediaFindDialog/kResDLGProjectMediaFindDialogColumnStaticTextName=Column:');
							dva_popup	(identifier:'columnPopup1', minWidth:200, topSpace:-8);
							dva_popup	(identifier:'columnPopup2', minWidth:200);
							row(child_horizontal: align_fill, horizontal: align_fill)
							{
														
								dva_popup (identifier:'matchTypePopup',label:'$$$/Premiere/DLG/ProjectMediaFindDialog/kResDLGProjectMediaFindDialogMatchStaticTextName=Match:');
							}							
						}
						column()
						{
							dva_static_text(name:'$$$/Premiere/DLG/ProjectMediaFindDialog/kResDLGProjectMediaFindDialogOperatorStaticTextName=Operator:', horizontal: align_left, spacing:0);
							dva_popup	(identifier:'containsPopup1', minWidth:150, topSpace:-8);
							dva_popup	(identifier:'containsPopup2', minWidth: 150);
						}
						column()
						{
							dva_static_text(name:'$$$/Premiere/DLG/ProjectMediaFindDialog/kResDLGProjectMediaFindDialogFindWhatStaticTextName=Find What:', horizontal: align_left, spacing:0);
							dva_text_edit(identifier:'findTextEdit1', minWidth:200, minHeight:21, multiLine:'false', horizontal:align_left, topSpace:-8, setAsFocused:'true');
							dva_text_edit(identifier:'findTextEdit2', minWidth:200, minHeight:21, multiLine:'false', horizontal:align_left);
						}
					}
				}
				dva_checkbox(identifier:'caseCheckbox', name:'$$$/Premiere/DLG/ProjectMediaFindDialog/kResDLGProjectMediaFindDialogCaseSensitiveCheckboxName=Case Sensitive');		
			}
			column (guide_mask:[@guide_baseline])
			{
				dva_button(name:'$$$/Premiere/DLG/ProjectMediaFindDialog/kResDLGProjectMediaFindDialogFindButtonName=Find', identifier:'findButton', default: true, setAsFocused:'true', minWidth:80);
				dva_button(name:'$$$/Premiere/DLG/ProjectMediaFindDialog/kResDLGProjectMediaFindDialogDoneButtonName=Done', identifier:'doneButton', minWidth:80);
			}			
		}	
	}
}		