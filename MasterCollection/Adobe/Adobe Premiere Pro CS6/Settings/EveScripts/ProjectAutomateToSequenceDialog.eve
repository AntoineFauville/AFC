layout ProjectAutomateToSequenceDialog
{
	view dva_dialog(name: '$$$/Premiere/DLG/ProjectAutomateToSequenceDialog/kResDLGProjectAutomateToSequenceDialogTitle=Automate To Sequence', identifier:'ProjectAutomateToSequenceDialog', spacing: 0)
	{
		row(child_horizontal: align_fill, horizontal: align_fill, spacing:15)
		{
			column()
			{
				dva_groupbox(identifier:'sourceProjectGroupbox', headerType:'static_text', horizontal: align_fill, topFrame:5)
				{
					row(horizontal: align_fill, spacing:0)
					{
						dva_popup(identifier:'orderingPopup', minWidth:150, label:'$$$/Premiere/DLG/ProjectAutomateToSequenceDialog/kResDLGProjectAutomateToSequenceOrderingPopupStatic=Ordering:')
						{
							dva_popup_item(name:'$$$/Premiere/Libraries/Dialogs/SortOrder=Sort Order');
							dva_popup_item(name:'$$$/Premiere/Libraries/Dialogs/SelectionOrder=Selection Order');
						}
					}
				}
				dva_groupbox(identifier:'destinationProjectGroupbox', headerType:'static_text', horizontal: align_fill, topFrame:5)
				{
					column(horizontal: align_fill)
					{
						row()
						{
							dva_popup(identifier:'placementPopup', minWidth:150, label:'$$$/Premiere/DLG/ProjectAutomateToSequenceDialog/kResDLGProjectAutomateToSequencePlacementPopupStatic=Placement:')
							{
								dva_popup_item(name:'$$$/Premiere/Libraries/Dialogs/Sequentially=Sequentially');
								dva_popup_item(name:'$$$/Premiere/Libraries/Dialogs/AtUnnumberedMarkersString=At Unnumbered Markers');
							}
						}
						row()
						{
							dva_popup(identifier:'methodPopup', minWidth:150, label:'$$$/Premiere/DLG/ProjectAutomateToSequenceDialog/kResDLGProjectAutomateToSequenceMethodPopupStatic=Method:')
							{
								dva_popup_item(name:'$$$/Premiere/Libraries/Dialogs/InsertEdit=Insert Edit');
								dva_popup_item(name:'$$$/Premiere/Libraries/Dialogs/OverlayEdit=Overlay Edit');
							}
						}
						row()
						{
							dva_number_edit(identifier:'clipOverlapEditText', minWidth:60, minHeight:21, multiLine:'false', label:'$$$/Premiere/DLG/ProjectAutomateToSequenceDialog/kResDLGProjectAutomateToSequenceClipOverlapPopupStatic=Clip Overlap:');
							dva_popup(identifier:'clipOverlapPopup', minWidth:80)
							{
								dva_popup_item(name:'$$$/Premiere/Libraries/Dialogs/Frames=Frames');
								dva_popup_item(name:'$$$/Premiere/Libraries/Dialogs/Seconds=Seconds');
							}
						}
					}
					
					dva_groupbox(identifier:'transitionsGroupbox', name:'$$$/Premiere/DLG/ProjectAutomateToSequenceDialog/kResDLGProjectAutomateToSequenceTransitionsGroupbox=Transitions', headerType:'static_text', horizontal:align_fill, topFrame:5)
					{
						column(vertical:align_fill)
						{
							dva_checkbox(identifier:'audioTransitionCheckbox', name:'$$$/Premiere/DLG/ProjectAutomateToSequenceDialog/kResDLGProjectAudioTransitionsCheckbox=Apply Default Audio Transition', minHeight:14, value:'true');
							dva_checkbox(identifier:'videoTransitionCheckbox', name:'$$$/Premiere/DLG/ProjectAutomateToSequenceDialog/kResDLGProjectVideoTransitionsCheckbox=Apply Default Video Transition', minHeight:14, value:'true');
						}
					}
					dva_groupbox(identifier:'ignoreGroupbox', name:'$$$/Premiere/DLG/ProjectAutomateToSequenceDialog/kResDLGProjectAutomateToSequenceIgnoreGroupbox=Ignore Options', headerType:'static_text', horizontal:align_fill, topFrame:5)
					{
						column(vertical:align_fill)
						{
							dva_checkbox(identifier:'ignoreAudioCheckbox', name:'$$$/Premiere/DLG/ProjectAutomateToSequenceDialog/kResDLGProjectIgnoreAudioCheckbox=Ignore Audio', minHeight:14, value:'false');
							dva_checkbox(identifier:'ignoreVideoCheckbox', name:'$$$/Premiere/DLG/ProjectAutomateToSequenceDialog/kResDLGProjectIgnoreVideoCheckbox=Ignore Video', minHeight:14, value:'false');
						}
					}
				}
			}
			column(spacing: 4, child_horizontal: align_center, vertical: align_fill, child_vertical:align_top)
			{
				dva_ok_cancel_column(minWidth:80, minHeight:20);
			}
		}
	}
}