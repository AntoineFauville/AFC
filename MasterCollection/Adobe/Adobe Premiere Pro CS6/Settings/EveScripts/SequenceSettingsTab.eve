layout SequenceSettingsTab
{
	view dva_tab_view(name: '$$$/Premiere/DLG/SequenceSettingsTab/kResDLGSequenceSettingsTabTitle=Settings', identifier: 'SequenceSettingsTab', placement: place_row, horizontal: align_fill, child_horizontal: align_fill)
	{
		column(horizontal: align_fill, vertical: align_fill, child_horizontal: align_fill)
		{
			row()
			{
				dva_popup(label: '$$$/Premiere/DLG/SequenceSettingsTab/kResDLGSequenceSettingsTabEditingModes=Editing Mode:', identifier: 'editingModesPopup', minWidth: 220);
				dva_button(name: '$$$/Premiere/DLG/SequenceSettingsTab/PlaybackSettingsButton=Playback Settings...', identifier: 'playbackSettingsButton');
			}
			row()
			{
				dva_popup(label: '$$$/Premiere/DLG/SequenceSettingsTab/kResDLGSequenceSettingsTabTimebase=Timebase:', identifier: 'timebasePopup', minWidth: 220);
			}
		
			dva_groupbox(name:'$$$/Premiere/DLG/SequenceSettingsTab/kResDLGSequenceSettingsTabVideoGroup=Video', identifier:'videoGroup', horizontal: align_fill, minWidth: 660)
			{
				row(horizontal: align_fill)
				{
					dva_number_edit(label: '$$$/Premiere/DLG/SequenceSettingsTab/kResDLGSequenceSettingsTabFrameSize=Frame Size:', identifier: 'frameSizeHorizontalTextEdit',  minValue:24, maxValue:10240, decimalPlaces:0, minWidth: 45);
					dva_static_text(name: '$$$/Premiere/DLG/SequenceSettingsTab/Horizontal=horizontal', identifier: 'horizontalTextEdit');
					dva_number_edit(identifier: 'frameSizeVerticalTextEdit', minValue:24, maxValue:8192, decimalPlaces:0, minWidth: 45);
					dva_static_text(name: '$$$/Premiere/DLG/SequenceSettingsTab/Vertical=vertical', identifier: 'verticalTextEdit');
					dva_static_text(name: 'x/y', identifier: 'ratioStaticText', minWidth: 100);
				}
				row()
				{
					dva_popup(label: '$$$/Premiere/DLG/SequenceSettingsTab/kResDLGSequenceSettingsTabPAR=Pixel Aspect Ratio:', identifier: 'parPopup', minWidth: 220);
				}
				row()
				{
					dva_popup(label: '$$$/Premiere/DLG/SequenceSettingsTab/kResDLGSequenceSettingsTabFields=Fields:', identifier: 'fieldsPopup', minWidth: 220);
				}
				row()
				{
					dva_popup(label: '$$$/Premiere/DLG/SequenceSettingsTab/kResDLGSequenceSettingsTabDisplayFormat=Display Format:', identifier: 'displayFormatVideoPopup', minWidth: 220);
				}
			}
		
			dva_groupbox(name:'$$$/Premiere/DLG/SequenceSettingsTab/kResDLGSequenceSettingsTabAudioGroup=Audio', identifier:'audioGroup', horizontal: align_fill, minWidth: 660)
			{
				dva_popup(label: '$$$/Premiere/DLG/SequenceSettingsTab/kResDLGSequenceSettingsTabSampleRate=Sample Rate:', identifier: 'sampleRatePopup', minWidth: 220);
				dva_popup(label: '$$$/Premiere/DLG/SequenceSettingsTab/kResDLGSequenceSettingsTabDisplayFormat=Display Format:', identifier: 'displayFormatAudioPopup', minWidth: 220);
			}
			
			dva_groupbox(name:'$$$/Premiere/DLG/SequenceSettingsTab/kResDLGSequenceSettingsTabVideoPreviewsGroup=Video Previews', identifier:'videoPreviewsGroup', horizontal: align_fill, minWidth: 660)
			{
				row()
				{
					dva_popup(label: '$$$/Premiere/DLG/SequenceVideoRenderingTab/kResDLGSequenceSettingsTabPreviewFileFormat=Preview File Format:', identifier: 'previewRenderPresetPopup', minWidth: 220);
					dva_button(name: '$$$/Premiere/DLG/SequenceSettingsTab/ConfigurePresetButton=Configure...', identifier: 'configurePresetButton');
				}
				row()
				{
					dva_popup(label: '$$$/Premiere/DLG/SequenceSettingsTab/CodecSelector=Codec:', identifier: 'codecPopup', minWidth: 220);
				}

				row()
				{
					column(vertical: align_fill)
					{
						dva_hot_text_number(identifier:'previewWidthHotTextNumber',label:'$$$/Premiere/DLG/SequenceSettingsTab/PreviewWidth=Width:',  value:1, minValue:24, maxValue:10240, decimalPlaces:0, increment:1);
						dva_hot_text_number(identifier:'previewHeightHotTextNumber',label:'$$$/Premiere/DLG/SequenceSettingsTab/PreviewHeight=Height:',  value:1, minValue:24, maxValue:8192, decimalPlaces:0, increment:1);
					}
					column(child_vertical: align_center, vertical: align_fill)
					{
						dva_static_image(identifier:'linkStaticImage', minWidth: 20, minHeight:40);
					}
					column(child_vertical: align_center, vertical: align_fill)
					{
						dva_static_image(identifier: 'constrainPreviewFrameAspectRatioButton', minWidth: 24, minHeight:20);
					}
					column(child_vertical: align_center, vertical: align_fill)
					{
						dva_button(identifier: 'resetPreviewFrameDimensions', name: '$$$/Premiere/DLG/SequenceSettingsTab/kResDLGSequenceSettingsTabResetPreviewDimensionsButton=Reset');
					}
				}
				row()
				{
					dva_checkbox(name: '$$$/Premiere/DLG/SequenceVideoRenderingTab/kResDLGSequenceSettingsTabUseMaxBitDepth=Maximum Bit Depth', identifier: 'maxBitDepthCheckbox');
					dva_checkbox(name: '$$$/Premiere/DLG/SequenceVideoRenderingTab/kResDLGSequenceSettingsTabUseMaxRenderQuality=Maximum Render Quality', identifier: 'maxRenderQualityCheckbox');
				}
			}
			
			row(vertical: align_bottom)
			{
				dva_button(name: '$$$/Premiere/DLG/SequenceSettingsTab/kResDLGSequenceSettingsTabSavePresetButton=Save Preset...', identifier: 'savePresetButton', minWidth: 120);
			}
		}
	}
}
